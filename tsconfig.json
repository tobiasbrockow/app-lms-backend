      "allowJs": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "build",
      "strict": true,
      "typeRoots": [
        "@types",
        "./node_modules/@types",
      ]
    },
    "include": ["src/**/*"]
